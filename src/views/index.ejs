
<%- include('includes/header'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center my-3">Agenda</h1>
            <p class="text-center lead">Organize seus contatos!</p>

            <%- include('includes/messages'); %>

            <div class="responsive-table my-3">
                <table class="table">
                    <% contacts.forEach(contact => { %>
                        <tr>
                            <td><%= contact.name %></td>
                            <td><%= contact.surname %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.phone %></td>
                            <td><a href="/contact/index/<%= contact._id %>">Edit</a></td>
                            <td><a class="text-danger" href="/contact/delete/<%= contact._id %>" >Delete</a></td>
                        </tr>
                    <% }); %>
                </table>
                <hr>
            </div>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('includes/footer'); %>