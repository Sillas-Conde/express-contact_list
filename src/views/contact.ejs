
<%- include('includes/header'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center my-3">Contact Editor</h1>
            <hr>
            <%- include('includes/messages'); %>
            <div class="row">
                <div class="col-lg">
                    <h4>Add or Edit Contact</h4>

                    <% if (contact._id) {%>
                    <form action="/contact/edit/<%= contact._id %>" method="POST">
                    <% } else { %>
                    <form action="/contact/register" method="POST">
                    <% } %>
                    
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                        <div class="form-group">
                          <label for="exampleInputName1">Name</label>
                          <input type="text" value="<%= contact.name %>" class="form-control" id="exampleInputName1" placeholder="Enter name" name="name">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputSurname1">Surname</label>
                          <input type="text" value="<%= contact.surname %>" class="form-control" id="exampleInputName2" placeholder="Enter surname" name="surname">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email"  value="<%= contact.email %>" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="email">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputTelephone1">Phone Number</label>
                          <input type="tel"  value="<%= contact.phone %>" class="form-control" id="exampleInputPhone1" placeholder="Enter phone number" name="phone">
                        </div>

                        <br>
                        <button type="submit" class="btn btn-primary">Create Contact</button>
                      </form>
                </div>
            </div>

        </div>
    </div>
</div>


<%- include('includes/footer'); %>